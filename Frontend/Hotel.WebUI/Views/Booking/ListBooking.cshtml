@model List<BookingResultDto>

@{
    ViewData["Title"] = "ListBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4 class="card-title">Rezervasyonlar</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-striped verticle-middle">
            <thead>
                <tr>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">İletişim</th>
                    <th scope="col">Giriş Tarihi</th>
                    <th scope="col">Çıkış Tarihi</th>
                    <th scope="col">Durum</th>
                    <th scope="col">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        @if(@item.Status == true)
                        {
                            <span class="label gradient-2 btn-rounded">Onaylandı</span>
                        }else
                        {
                            <span class="label gradient-1 btn-rounded">Onay Bekliyor</span>
                        }
                    </td>
                    <td>
                            <span><a href="/Booking/ApprovedBooking/@item.BookingID" data-toggle="tooltip" data-placement="top" title="Onay"><i class="fa fa-check color-muted m-r-5"></i></a>&nbsp;&nbsp;<a href="#" data-toggle="tooltip" data-placement="top" title="Düzelt"><i class="fa fa-pencil color-muted m-r-5"></i> </a>&nbsp;&nbsp;</span>
                    </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>